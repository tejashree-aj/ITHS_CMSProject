@page
@model ITHS_CMSProject.Pages.Admin.PageContent.CreateContentModel
@{
    ViewData["Title"] = "Create";
    Layout = "Admin_Layout";
}

<h1>Create Page Content</h1>
<br />
<hr />
<div class="row">
    <div class="col-md-11">
        <form method="post" enctype="multipart/form-data" id="createForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PageContent.Title" class="control-label"></label>
                <input asp-for="PageContent.Title" class="form-control" />
                <span asp-validation-for="PageContent.Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PageContent.Content" class="control-label"></label>
                <textarea asp-for="PageContent.Content" class="form-control" id="editor"></textarea>
                <span asp-validation-for="PageContent.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PageContentView.Page">Select Page:</label>
                @Html.DropDownListFor(x => x.PageContent.PageId, new SelectList(Model.Pages, "PageId", "PageName"), htmlAttributes: new { @class = "form-control", id = "PageId" })                
                <span asp-validation-for="PageContent.PageId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="IndexContent">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
