@page
@model ITHS_CMSProject.Pages.Admin.PageContent.EditContentModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/Admin_Layout.cshtml";
}

<h4>Page Content Edit</h4>
<br />

<hr />
<div class="row">
    <div class="col-md-11">
        <form method="post" enctype="multipart/form-data" id="createForm">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PageContentView.PageContentId" />
            <div class="form-group">
                <label asp-for="PageContentView.Title" class="control-label"></label>
                <input asp-for="PageContentView.Title" class="form-control" />
                <span asp-validation-for="PageContentView.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PageContentView.Content" class="control-label"></label>
                <textarea asp-for="PageContentView.Content" class="form-control" id="editor"></textarea>
                <span asp-validation-for="PageContentView.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="PageContentView.Page">Select Page:</label>
                @Html.DropDownListFor(x => x.PageContentView.PageId, new SelectList(Model.Pages, "PageId", "PageName"), htmlAttributes: new { @class = "form-control", id = "PageId" })
                @Html.ValidationMessageFor(x => x.PageContentView.PageId, "", new { @class = "text-danger" })
                <span asp-validation-for="PageContentView.PageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./IndexContent">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
