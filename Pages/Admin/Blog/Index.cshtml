@model ITHS_CMSProject.Pages.Admin.Blog.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/Admin_Layout.cshtml";
}

<h1>Blogs</h1>
<br />

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>            
            <th>
                @Html.DisplayNameFor(model => model.Blogs[0].ImageURL)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blogs[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Blogs[0].Author)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Blogs) {
        <tr>            
            <td>
                @*@Html.DisplayFor(modelItem => item.ImageURL)*@
                <img src="@Url.Content(item.ImageURL)" alt="Image" width="100" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BlogId">Edit</a> |
                <a asp-page="./Delete" asp-route-id="@item.BlogId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
